{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "es2017",
    "module": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
