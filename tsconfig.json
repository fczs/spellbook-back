{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/types/global.d.ts",
    "src/types/feed.d.ts"
  ],
}
